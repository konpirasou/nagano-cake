<div class="col-8">
  <h4 class="bg-light p-3 my-4 d-inline-block">注文情報入力</h4>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">商品名</th>
        <th scope="col">単価(税込)</th>
        <th scope="col">数量</th>
        <th scope="col">小計</th>
      </tr>
    </thead>
    <% @cart_products.each do |cart_product| %>
    <tbody>
      <tr>
        <td><%= attachment_image_tag cart_product.product, :image, :fill, 70, 45, class: "mr-3" %><%= cart_product.product.name %></td>
        <td><%= cart_product.product.add_tax_price.to_s(:delimited) %></td>
        <td><%= cart_product.amount %></td>
        <td><%= cart_product.product.add_tax_price * cart_product.amount %></td>
   　  </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="col-4">
  <h4 class="p-3 my-4 d-inline-block"></h4>
  <table class="table table-bordered mt-4">
    <tr>
      <th class>合計金額</th>
      <td><%= @total_price %></td>
    </tr>
    <tr>
      <th class>商品合計</th>
      <td><%= @total_price %></td>
    </tr>
    <tr>
      <th class>請求金額</th>
      <td><%= @total_price %></td>
    </tr>
  </table>
</div>

  <h5 class="col-3">支払い方法</h5>
  <p class="col-3"><%= @order.payment_method %></p>
  <div class="col-6"></div>
  <h5 class="col-3">お届け先</h5>
  <p class="col-3"><%= "#{@order.postal_code} #{@order.address} #{@order.name}" %></p>

<div class="col-12 text-center">
  <%= link_to "注文を確定する", root_path, class: "btn btn-success m-4 p-3 block-right" %>
</div>
