<h4 class="bg-light p-3 my-5">注文履歴一覧</h4>

<table class="table table-bordered">
  <thead>
    <tr class="table-active">
      <th scope="col">注文日</th>
      <th scope="col">配送先</th>
      <th scope="col">注文商品</th>
      <th scope="col">支払金額</th>
      <th scope="col">ステータス</th>
      <th scope="col">注文詳細</th>
    </tr>
  </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td class="align-middle"><b><%= order.created_at.strftime("%Y/%m/%d") %></b></td>
        <td class="align-middle">
          <%= "〒#{order.postal_code}" %></br>
          <%= order.address %>
        </td>
        <td class="align-middle">
          <% order.products.each do |product| %>
            <%= product.name %></br>
          <% end %>
        </td>
        <td class="align-middle"><b><%= "#{order.total_payment.to_s(:delimited)}円" %></b></td>
        <td class="align-middle"><b><%= order.status %></b></td>
        <td class="align-middle text-center"><%= link_to "表示する", order_path(order.id), local: :true, class: "btn btn-primary" %> </td>
   　  </tr>
    <% end %>
 </tbody>
</table>