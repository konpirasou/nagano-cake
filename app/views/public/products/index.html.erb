
    <div class="col-3 mt-5">
      <h5 class="border border-secondary mb-0 p-2 text-center">ジャンル検索</h5>
      <div class="border border-secondary">
        <ul class="genre-list">
          <% @genres.each do |genre| %>
            <li>
              <%= link_to products_path(genre_search: genre.id) do %>
                <%= genre.name %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-9 mt-5">
      <% if params[:genre_search].present? && @products.present? %>
        <h3><%= @products.first.genre.name %>一覧<span>(全<%= @products.count %>件)</span></h3>
      <% else %>
        <h3>商品一覧<span>(全<%= @products.count %>件)</span></h3>
      <% end %>
        <ul class="new-products">
          <% @products.each do |product| %>
            <li>
              <%= link_to product_path(product.id) do %>
                <%= attachment_image_tag product, :image, :fill, 170, 120 %>
                  <h6 class="mt-2 text-dark"><%= product.name %></h6>
              <% end %>
                 <h6 class="mt-2">¥<%= product.price %></h6>
            </li>
          <% end %>
        </ul>
    </div>
    <%= paginate @products %>