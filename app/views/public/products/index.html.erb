<div class="container">
  <div class="col-md-12">
    <div class="genre-nav mt-5">
      <ul class="nav justify-content-center">
          <li class="genre-item nav-item p-2"><%= link_to "全商品", products_path, class:"nav-link text-dark" %> </li>
        <% @genres.each do |genre| %>
          <li class="genre-item nav-item p-2"><%= link_to genre.name, products_path(genre_search: genre.id), class:"nav-link text-dark" %> </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="col-md-12 mt-5">
    <% if params[:genre_search].present? && @products.present? %>
      <h3><%= @products.first.genre.name %>一覧<span>(全<%= @products.count %>件)</span></h3>
    <% else %>
      <h3>商品一覧<span>(全<%= @products.count %>件)</span></h3>
    <% end %>
      <ul class="new-products">
        <% @products.each do |product| %>
          <li>
            <%= link_to product_path(product.id) do %>
              <%= attachment_image_tag product, :image, :fill, 170, 120 %>
                <h6 class="mt-2 text-dark"><%= product.name %></h6>
            <% end %>
               <h6 class="mt-2">¥<%= product.price %></h6>
          </li>
        <% end %>
      </ul>
  </div>
  <%= paginate @products %>
</div>