<h3 class="bg-light p-3 my-4">新規会員登録</h3>
<div class="col-sm-12 mx-auto">

  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer form-horizontal', local: true do |f| %>
    <%= render "public/customers/shared/error_messages", resource: resource %>

    <div class="field form-group row">
      <%= f.label :"名前", class: "col-sm-2 control-label" %>
      <%= f.label :"(姓)", class: "col-sm-1 control-label" %>
      <%= f.text_field :last_name, placeholder: "令和", autofocus: true, class: "col-sm-3" %>
      <%= f.label :"(名)", class: "col-sm-1 control-label" %>
      <%= f.text_field :first_name, placeholder: "道子", autofocus: true, class: "col-sm-3" %>
    </div>

    <div class="field form-group row">
      <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
      <%= f.label :"(セイ)", class: "col-sm-1 control-label" %>
      <%= f.text_field :last_name_kana, placeholder: "レイワ", autofocus: true, class: "col-sm-3" %>
      <%= f.label :"(メイ)", class: "col-sm-1 control-label" %>
      <%= f.text_field :first_name_kana, placeholder: "ミチコ", autofocus: true, class: "col-sm-3" %>
    </div>

    <div class="field form-group row">
      <%= f.label :"メールアドレス", class: "col-sm-3 control-label" %>
      <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "col-sm-3" %>
    </div>

    <div class="field form-group row">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %>
      <%= f.text_field :postal_code, placeholder: "0000000", autofocus: true, class: "col-sm-3" %>
    </div>

    <div class="field form-group row">
      <%= f.label :"住所", class: "col-sm-3 control-label" %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", autofocus: true, class: "col-sm-7" %>
    </div>

    <div class="field form-group row">
      <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-3 control-label" %><br />
      <%= f.text_field :telephone_number, placeholder: "00000000000", autofocus: true, class: "col-sm-3" %>
    </div>

    <div class="field form-group row">
      <%= f.label :"パスワード（6文字以上）", class: "col-sm-3 control-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-3" %>
    </div>

    <div class="field form-group row">
      <%= f.label :"パスワード（確認用）", class: "col-sm-3 control-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-3" %>
    </div>

    <div class="actions row">
      <%= f.submit "新規登録", class: "btn btn-success btn-block col-sm-3 offset-sm-3" %>
    </div>
  <% end %>
</div>

<h4 class="bg-light p-3 my-4">既に登録済みの方</h4>
<div class="col-sm-12 ">
  <%= render "public/customers/shared/links" %>
</div>
