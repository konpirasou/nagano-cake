<div class="container">
  <div class="row">
    <h3 class="bg-light p-3 my-4">商品編集</h3>
    <div class="col-sm-12 mx-auto">
      <%= form_with model: @product, url: admin_product_path, id: 'edit_product', class: 'edit_product form-horizontal', local: true do |f| %>
        <%= render "public/customers/shared/error_messages", resource: @product %>

        <div class="field form-group row">
          <%= f.label :"商品画像", class: "col-sm-2 control-label" %>
          <%= f.attachment_field :image, class: "col-sm-5 form-control-file user_image" %>
        </div>

        <div class="field form-group row">
          <%= f.label :"商品名", class: "col-sm-2 control-label" %>
          <%= f.text_field :name, placeholder: "商品名", autofocus: true, class: "col-sm-3" %>
        </div>

        <div class="field form-group row">
          <%= f.label :"商品説明", class: "col-sm-2 control-label" %>
          <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "col-sm-3" %>
        </div>

        <div class="field form-group row">
          <%= f.label :"ジャンル", class: "col-sm-2 control-label" %>
          <%= f.collection_select :genre_id, @genres, :id, :name %>
        </div>

        <div class="field form-group row">
          <%= f.label :"販売価格", class: "col-sm-2 control-label" %>
          <%= f.text_field :price, placeholder: "1000", class: "col-sm-3" %>円
        </div>

        <div class="field form-group row">
          <%= f.label :"販売ステータス", class: "col-sm-2 control-label" %>
          <div>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中", value: true %>
          </div>
          <div>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中", value: false %>
          </div>
        </div>

        <div class="actions row">
          <%= f.submit "編集する", class: "btn btn-success btn-block col-sm-3 offset-sm-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>